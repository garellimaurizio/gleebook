<% provide(:title, "Recover Password") %>

<section id="pwd-reset">
		<div class="row">
			<h2 class="text-center">Forgot your password?</h2>
		</div>
		
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">
				
				<div class="col-xs-10 col-xs-offset-1">
					<p class="form-header">Enter your e-mail, then click Continue. We'll send you a link to a page where you can easily create a new password.</p>
					<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
						<%= f.error_notification %>
						<%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email address", input_html: {class: "form-control"} %>
						<%= f.button :submit, "Continue", class: "btn btn-lg btn-primary btn-block" %>
					<% end %>
					<%= render "devise/shared/links" %>

				</div>
			</div><!-- end col-sm-6 -->

		</div> <!-- /container -->
</section>