<% provide(:title, "Sign-up") %>

<section id="sign-up">
		<div class="row">
			<h2 class="text-center">Sign up</h2>
		</div>
		
		<div class="container">

			<div class="col-sm-6 col-sm-offset-3">
				<div class="col-xs-10 col-xs-offset-1">
					
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin"}) do |f| %>
						<%= f.error_notification %>

						<%= f.input :email, required: true, autofocus: true, label: 'Email', placeholder: "Email address", input_html: {class: "form-control"} %>

						<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: 'Password', placeholder: "Password", input_html: {class: "form-control"} %>
						<%= f.input :password_confirmation, required: true, label: 'Password confirmation', placeholder: "Password confirmation", input_html: {class: "form-control"} %>
						
						<%= f.input :username, required: true, label: false, placeholder: "Username", label: 'Username', input_html: {class: "form-control"} %>
						<%= f.input :first_name, required: true, label: false, placeholder: "First name", label: 'First name', input_html: {class: "form-control"} %>
						<%= f.input :last_name, required: true, label: false, placeholder: "Last name", label: 'Last name', input_html: {class: "form-control"} %>
						<%= f.input :sex, :as => :radio_buttons, :collection => [ "Male", "Female" ], input_html: {class: "radio-inline"} %>

						<div class="myform-inline">
						<%= f.input :birthday, required: false, label: 'Birthday', start_year: Date.today.year - 110, end_year: Date.today.year, input_html: {class: ""} %>
						</div>
							
							
							
												
						<%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block"  %>

						
						
						
						
						
						
						
						
						
					<% end %>
				<%= render "devise/shared/links" %>
				</div>
			</div><!-- end col-sm-6 -->

		</div> <!-- /container -->
</section>