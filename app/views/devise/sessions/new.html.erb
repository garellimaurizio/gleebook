<% provide(:title, "Sign-in") %>


<section id="sign-in">
		<div class="row">
			<h2 class="text-center">Sign in</h2>
		</div>
		
		<div class="container">

			<div class="col-sm-6">
				<div class="col-xs-10 col-xs-offset-1">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
						<%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email address", input_html: {class: "form-control"} %>
						<%= f.input :password, required: false, label: false, placeholder: "Password", input_html: {class: "form-control"} %>
						<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
						<%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
					<% end %>
				<%= render "devise/shared/links" %>
				</div>
			</div><!-- end col-sm-6 -->

			<div class="col-sm-6">
				<div class="row social-login">
					<div class="col-xs-8 col-xs-offset-2">
						<button class="btn btn-lg btn-block btn-facebook responsive-width" type="submit"><i class="fa fa-facebook fa-lg"></i> Log in with Facebook</button>
						<button class="btn btn-lg btn-block btn-twitter responsive-width" type="submit"><i class="fa fa-twitter fa-lg"></i> Log in with Twitter</button>
						<button class="btn btn-lg btn-block btn-google responsive-width" type="submit"><i class="fa fa-google-plus fa-lg"></i> Log in with Google</button>						
					</div>
				</div>
				<div class="row" id="sign-up-cta">
					<div class="col-xs-12">
						<p>Still don't have an account?</p>
						<%= link_to "Sign up now", new_registration_path(resource_name), class: "btn btn-lg btn-primary" %>
					</div>
				</div>

			</div>





		</div> <!-- /container -->
</section>