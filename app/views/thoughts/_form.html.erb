<%= simple_form_for(@thought, html: {class: "form-signin"}) do |f|%>
	<%= f.input :title, label: false, required: true, autofocus: true, input_html: {class: "form-control input-lg"}, placeholder: "Title" %>
	<%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control input-lg"}, placeholder: "Content" %>

	<%= f.button :submit, "Post your thought", class: "btn btn-default btn-lg", name: "go" %>
<% end %>